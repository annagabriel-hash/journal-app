<% if @category.errors.any? %>
<div class="alert alert-danger alert-dismissible fade row show" role="alert">
	<h2 class="alert-heading">Uh-oh! Something went wrong</h2>
  <p>The following errors prevented the <%= @category.class.name.downcase %> from being saved:</p>
  <hr>
	<ul>
    <% @category.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>
