<section class='container-fluid p-5'>
<div class='d-flex'>
  <h1>Categories</h1>
  <%= link_to 'New Category', new_category_path, class: 'align-self-center btn btn-primary ms-5 px-5 py-2 rounded-pill shadow' %>
</div>
  <table class='table table-hover mt-4' id='categories-list'>
    <thead>
      <tr class='table-primary'>
        <th>Category</th>
        <th colspan='3' class='text-center'>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= convert_to_propercase(category.name) %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-primary btn-sm'%></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-primary btn-sm' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
